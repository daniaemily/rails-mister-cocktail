<h1>Dania's Cocktail Haus</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktails_helper(cocktail) %>') ">
        <div class="card-description"><h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <h3><%= link_to "Add a cocktail", new_cocktail_path %></h3>
</div>
















































